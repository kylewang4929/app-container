<?xml version='1.0' encoding='utf-8'?>
<widget id="${APP_BUNDLEID}" version="${APP_VERSION}" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>${APP_NAME}</name>
    <description>
        Smart Home
    </description>
    <author email="gizwits@gizwits.com" href="http://www.gizwits.com/">
        Gizwits
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="orientation" value="portrait" />
        <icon density="ldpi" src="resources/icon/android/icon-ldpi.png"/>
        <icon density="mdpi" src="resources/icon/android/icon-mdpi.png"/>
        <icon density="hdpi" src="resources/icon/android/icon-hdpi.png"/>
        <icon density="xhdpi" src="resources/icon/android/icon-xhdpi.png"/>
        <icon density="xxhdpi" src="resources/icon/android/icon-xxhdpi.png"/>
        <icon density="xxxhdpi" src="resources/icon/android/icon-xxxhdpi.png"/>
        <splash density="land-ldpi" src="resources/splash/android/screen-land-ldpi.png"/>
        <splash density="land-mdpi" src="resources/splash/android/screen-land-mdpi.png"/>
        <splash density="land-hdpi" src="resources/splash/android/screen-land-hdpi.png"/>
        <splash density="land-xhdpi" src="resources/splash/android/screen-land-xhdpi.png"/>
        <splash density="land-xxhdpi" src="resources/splash/android/screen-land-xxhdpi.png"/>
        <splash density="land-xxxhdpi" src="resources/splash/android/screen-land-xxxhdpi.png"/>
        <splash density="port-ldpi" src="resources/splash/android/screen-port-ldpi.png"/>
        <splash density="port-mdpi" src="resources/splash/android/screen-port-mdpi.png"/>
        <splash density="port-hdpi" src="resources/splash/android/screen-port-hdpi.png"/>
        <splash density="port-xhdpi" src="resources/splash/android/screen-port-xhdpi.png"/>
        <splash density="port-xxhdpi" src="resources/splash/android/screen-port-xxhdpi.png"/>
        <splash density="port-xxxhdpi" src="resources/splash/android/screen-port-xxxhdpi.png"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-navigation href="prefs:*" />
        <allow-navigation href="app-prefs:*" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="orientation" value="portrait" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <icon height="29" width="29" src="resources/icon/ios/icon-small.png"/>
        <icon height="40" width="40" src="resources/icon/ios/icon-40.png"/>
        <icon height="50" width="50" src="resources/icon/ios/icon-50.png"/>
        <icon height="57" width="57" src="resources/icon/ios/icon.png"/>
        <icon height="58" width="58" src="resources/icon/ios/icon-small@2x.png"/>
        <icon height="60" width="60" src="resources/icon/ios/icon-60.png"/>
        <icon height="72" width="72" src="resources/icon/ios/icon-72.png"/>
        <icon height="76" width="76" src="resources/icon/ios/icon-76.png"/>
        <icon height="80" width="80" src="resources/icon/ios/icon-40@2x.png"/>
        <icon height="87" width="87" src="resources/icon/ios/icon-small@3x.png"/>
        <icon height="100" width="100" src="resources/icon/ios/icon-50@2x.png"/>
        <icon height="114" width="114" src="resources/icon/ios/icon@2x.png"/>
        <icon height="120" width="120" src="resources/icon/ios/icon-40@3x.png"/>
        <icon height="120" width="120" src="resources/icon/ios/icon-60@2x.png"/>
        <icon height="144" width="144" src="resources/icon/ios/icon-72@2x.png"/>
        <icon height="152" width="152" src="resources/icon/ios/icon-76@2x.png"/>
        <icon height="167" width="167" src="resources/icon/ios/icon-83.5@2x.png"/>
        <icon height="180" width="180" src="resources/icon/ios/icon-60@3x.png"/>
        <icon height="1024" width="1024" src="resources/icon/ios/icon-1024.jpg" />
        <splash height="480" width="320" src="resources/splash/ios/Default~iphone.png"/>
        <splash height="768" width="1024" src="resources/splash/ios/Default-Landscape~ipad.png"/>
        <splash height="960" width="640" src="resources/splash/ios/Default@2x~iphone.png"/>
        <splash height="1024" width="768" src="resources/splash/ios/Default-Portrait~ipad.png"/>
        <splash height="1136" width="640" src="resources/splash/ios/Default-568h@2x~iphone.png"/>
        <splash height="1242" width="2208" src="resources/splash/ios/Default-Landscape-736h.png"/>
        <splash height="1334" width="750" src="resources/splash/ios/Default-667h.png"/>
        <splash height="1536" width="2048" src="resources/splash/ios/Default-Landscape@2x~ipad.png"/>
        <splash height="2048" width="1536" src="resources/splash/ios/Default-Portrait@2x~ipad.png"/>
        <splash height="2048" width="2732" src="resources/splash/ios/Default-Landscape@~ipadpro.png"/>
        <splash height="2208" width="1242" src="resources/splash/ios/Default-736h.png"/>
        <splash height="2732" width="2048" src="resources/splash/ios/Default-Portrait@~ipadpro.png"/>
    </platform>
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <feature name="CDVWKWebViewEngine">
        <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="~4.5.1" />
    <plugin name="com.pylonproducts.wifiwizard" spec="https://github.com/gizwits/WifiWizard.git#2.14" />
    <plugin name="cordova-open-native-settings" spec="^1.4.1" />
    <plugin name="cordova-plugin-app-version" spec="^0.1.9" />
    <plugin name="cordova-plugin-appavailability" spec="^0.4.2" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.3.0">
        <variable name="XWALK_VERSION" value="23+" />
        <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+" />
        <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect" />
        <variable name="XWALK_MODE" value="embedded" />
        <variable name="XWALK_MULTIPLEAPK" value="true" />
    </plugin>
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-vibration" spec="^2.1.5" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-wkwebview-engine" spec="https://github.com/ionic-team/cordova-plugin-wkwebview-engine.git#rel/1.0.3" />
    <plugin name="ionic-plugin-keyboard" spec="^2.2.1" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^6.0.7">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" " />
    </plugin>
</widget>
